<div class='blog'>
  <%- model_class = Post -%>
  <div class="page-header">
    <h1>Say What?</h1>
  </div>

  <section> 
    <% @posts.each_with_index do |post,index| %>
      <div class="row-fluid post">
        <article class='post_<%=index%> span12'>
          <nav class="row-fluid ">
            <div class='span10'>
              <h3><%= link_to post.title, post_path(post) %></h3>
            </div>
          </nav>
          <div class="row-fluid">
            <div class='span8 offset1'><%= post.content %></div>
          </div>
          <div class='row-fluid'>
            <div class='span8 offset1'>
              <h5> - <%= post.name %></h5>
              <h5><%= post.created_at.strftime("%d %b. %Y") %></h5>
            </div></div>
            <div class='row-fluid'>
              <div class='span2'>
                <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini' %>
                <%= link_to 'Delete', post_path(post),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-mini btn-danger' %>
              </div>
            </div>
        </article>
      </div>
    <% end %>
    <div class='row-fluid new-post-container'> 
      <%= link_to "post something", new_post_path, :class => 'span12 new-post' %>
    </div>
  </section>
</div>